<h1>Testimonials</h1>

<%= link_to "Submit a testimonial", new_testimonial_path, class: "btn btn-blue" %>

<% @testimonials.each do |testimonial| %>
  <% if testimonial.draft? %>
    <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
  <% end %>
  <div>
    <%= testimonial.name %>
    <%= testimonial.city %>
    <%= testimonial.content %>
  </div>
  <div class="mb-5">
    <%= link_to "Edit", edit_testimonial_path(testimonial) if user_signed_in? %>
  </div>
<% end %>
